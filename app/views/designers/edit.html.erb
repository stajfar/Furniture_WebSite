<h1>Designers Edit</h1>


<div>

<% if @designers != nil %>

    <%  @designers.each do |f| %>

      <div id="edit-style1">
        <h3> <%= f.d_name %></h3>
        <h2> <%= link_to  'Edit',edit_designer_path(f) %></h2>
      </div>

    <% end %>

<% end %>

</div>

<div id="edit-style2"> </div>


 <% if @designers != nil %>



      <%=  form_for (@designer) do |f| %>

           <h4> <%=  f.label "Designer name:" %> </h4>
            <%=  f.text_field :d_name %>      </br></br>


            <h4><%=  f.label "Designer Description:"%> </h4>
            <%=  f.text_area :d_desc %>             </br></br>


          <h4>
            Select Picture
          </h4>

            <% Dir["app/assets/images/*.jpg"].each do |file| %>
                <%=  radio_button_tag 'designer[d_pic]', File.basename(file), @designer.d_pic== File.basename(file)%>
                <%=  File.basename(file) %>
            <% end %>


        <br /><br />
          <p>
            <%=  f.submit "Update designer" %>  </br>
          </p>

      <% end %>

  <% end %>

